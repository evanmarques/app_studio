{
    "version": "0.2.0",
    "configurations": [
        {
            // Configuração para rodar no seu Smartphone (Android ou iOS)
            // ou em um emulador.
            "name": "Flutter (Mobile)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "debug",
            // Esta linha garante que o Console de Depuração sempre abrirá.
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            // Configuração para rodar especificamente no Google Chrome
            // usando o Flutter para Web.
            "name": "Flutter (Chrome)",
            "request": "launch",
            "type": "dart",
            // "deviceId": "chrome" diz ao Flutter para iniciar uma sessão web.
            "deviceId": "chrome",
            "flutterMode": "debug",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}